@model IEnumerable<Product>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/Style.css" rel="stylesheet" type="text/css" />
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet">
    <script src="https://www.paypal.com/sdk/js?client-id=ARvLxZwkypuI6WVyonf5YlMtTPOVAxYla_DbLSRjRmp5teRjxsxwV634uEJhX50mAIsG279_5JIaFwyd" data_source="integrationbuilder"></script>
    <script src="/js/site.js" defer></script>
    <title>High Tech Labs</title>
    <style>
                                    /* Cart */
                            .cart
                            {
                                position: fixed;
                                top: 0;
                                right: -100%;
                                width: 360px;
                                min-height: 100vh;
                                padding: 20px;
                                background-image: url("/images/purp3.jpg");
                                background-repeat: no-repeat;
                                background-size: cover;
                                background-position: center;
                                overflow-y: auto;
                                -webkit-overflow-scrolling: touch;
                                max-height: 500px;
                                max-height: 50vh;
                                transition: .3s;

                            }
                            :root
                            {
                                background-image: url("/images/Colorful-Marijuana-Plants.jpg");
                                background-repeat: no-repeat;
                                background-size: cover;
                                background-position: center;
                                width: 100%;
                                height: 260%;
                            }
                            .topnav a:hover {
                                 background-color: #026b07;
                                 color: ghostwhite;
                             }

                            .navbar a:hover, .dropdown:hover .dropbtn {
                                background-color: #026b07;
                            }
                            .dropdown-content a:hover {
                                background-color: #026b07;
                                color: ghostwhite;
                            }
                            .cart.active 
                            {
                                right: 0;
                            }

                            .cart-title {
                                color: ghostwhite;
                                border-bottom: 2px solid ghostwhite;
                            }

                            .cart-box {
                                display: grid;
                                grid-template-columns: 32% 50% 18%;
                                align-items: center;
                                gap: 1rem;
                                margin-top: 1rem;
                            }

                            .cart-image {
                                width: 110px;
                                height: 160px;
                                object-fit: contain;
                            }

                            .detail-box {
                                display: grid;
                                row-gap: .5rem;
                            }

                            .product-name {
                                font-size: 30px;
                                color: ghostwhite;
                            }

                            .details {
                                font-size: 22px;
                                color: ghostwhite;
                            }

                            .cart-price {
                                font-size: 21px;
                                color: ghostwhite;
                            }

                            .cart-quantity {
                                width: 2.4rem;
                                text-align: center;
                                font-size: 1rem;
                            }

                            .cart-remove {
                                font-size: 30px;
                                cursor: pointer;
                                color: ghostwhite;
                            }

                            .total {
                                display: flex;
                                justify-content: flex-end;
                                margin-top: 1.5rem;
                                border-top: 2px solid ghostwhite;
                            }

                            .total-title {
                                font-size: 25px;
                                color: ghostwhite;
                            }

                            .total-price {
                                margin-left: 1rem;
                                font-size: 25px;
                                color: ghostwhite;
                            }

                            .buy-btn {
                                display: flex;
                                margin: 1.5rem auto 0 auto;
                                font-size: 60px;
                                padding: 12px;
                                color: ghostwhite;
                                float: right;
                                cursor: pointer;
                                border: none;

                            }

                            .add-to-cart
                            {
                                display: flex;
                                margin: 1.5rem auto 0 auto;
                                font-size: 65px;
                                padding: 12px;
                                color: ghostwhite;
                                cursor: pointer;
                                border: none;
                                float: right;
                            }
                            .add-to-cart:hover {
                                    background-color: #026b07;
                                }

                                .buy-btn:hover {
                                    background-color: #026b07;
                                }

                            #close-cart {
                                position: absolute;
                                top: 1rem;
                                right: .8rem;
                                font-size: 45px;
                                cursor: pointer;
                                color: ghostwhite;
                            }
                            .topnav i#cart-icon {
                            float: right;
                            color: ghostwhite;
                            font-size: 70px;
                            cursor: pointer;
                        }
                        
                        .topnav i#cart-icon:after {
                            float: right;
                            color: ghostwhite;
                            content:attr(value);
                            font-size:15px;
                            background-color: #003a1c;
                            border-radius:50%;
                            padding:3px;
                            position:relative;
                            left:-10px;
                            opacity:0.9;
                        }
                            .topnav i#cart-icon:hover {
                                background-color: #026b07;
                                color: ghostwhite;
                            }

                            /* Item Grid*/

                            .card {
                    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                    max-width: 300px;
                    margin: auto;
                    text-align: center;
                    font-family: arial;
                }
                .card:hover 
                {
                    background-color: #026b07;
                }

                .card button {
                    border: none;
                    outline: 0;
                    padding: 12px;
                    color: ghostwhite;
                    text-align: center;
                    cursor: pointer;
                    width: 100%;
                    font-size: 25px;
                }


                    .card button:hover {
                        background-color: #026b07;
                    }

                .card-title
                {
                    color:ghostwhite;
                    font-size: 30px;
                    font-weight: 700;
                }
                .card-text
                {
                    color: ghostwhite;
                    font-size: 22px;
                }
                .card-details
                {
                    color: ghostwhite;
                    font-size: 20px;
                }
                .card-img-top {
                    width: 300px;
                    height: 350px;
                }
                
                .grid-container {
                    display: grid;
                    grid-template-columns: auto auto auto;
                    padding: 10px;
                }

                .grid-item {

                    padding: 20px;
                    font-size: 40px;
                    text-align: center;
                }
    </style>
</head>

<body>

    <header>
        
        <div class="cart">
            <h2 class="cart-title">Cart</h2>
            <div class="cart-content">
            
            </div>
            <div class="total">
                <div class="total-title">Total:</div>
                <div class="total-price">$0</div>
            </div>
            <div id="paypal"></div><i class='bx bx-money bx-tada-hover buy-btn'></i>
            <i class='bx bx-x bx-tada-hover' id="close-cart"></i>
        </div>

    </header>

    <div>
        <div class="topnav">
            <a class="topnavimage" href="//Index/"><img class="navbarimage" src="~/images/htlogo1.png" alt=""></a>
            <div class="dropdown">
                <button class="dropbtn">
                    Products
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown-content">
                    <a href="/Product/Edibles/">Edibles</a>
                    <a href="/Product/Wax/">Wax</a>
                    <a href="/Product/Flower/">Flower</a>
                </div>
            </div>
            <a href="/Home/Contact/">Contact</a>
            <i class='bx bx-cart bx-tada-hover' id="cart-icon" value="0"></i>
               
            

        </div>
    </div>

    <img class="homeimage" src="~/images/htlogo1.png" alt="" class="homeimage">
    <h1>Featured Products</h1>

    <div class="grid-container">
        @foreach (var product in Model.Where(i => i.FeaturedProduct == 1))
        {
            if (product.StockLevel > 0)
            {
                if (product.CategoryID == 1)
                {
                    <div class="grid-item">
                    <div class="card" style="width: 50rem;">
                        <img src="~/images/@product.ProductImage" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">Price: <a class="card-price">$@product.Price</a></p>
                            <p class="card-details">@product.ProductDescription</p>
                            <i class='bx bx-cart-add bx-tada-hover add-to-cart'></i>
                        </div>
                    </div>
                    </div>
                }
                else
                {
                    <div class="grid-item">
                    <div class="card" style="width: 50rem;">
                        <img src="~/images/@product.ProductImage" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">Price per 8th: <a class="card-price">$@product.Price</a></p>
                            <p class="card-details">@product.ProductDescription</p>
                            <i class='bx bx-cart-add bx-tada-hover add-to-cart'></i>
                        </div>
                    </div>
                    </div>
                }

            }
        }
    </div>

    <footer>
        <div class="container">
            &copy; 2022 - High Tech Labs
        </div>
    </footer>

</body>
</html>
